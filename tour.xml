	               design_bgalpha="1"
	               design_bgborder="0"
	               design_bgroundedge="10"
	               design_bgshadow="0 4 10 0x000000 0.3"
	               design_thumbborder_bgborder="3 0xf75e4c 1.0"
	               design_thumbborder_padding="3"
	               design_thumbborder_bgroundedge="0"
	               design_text_css="color:#ffffff; font-family:Arial;"
				   design_text_css2="color:#000000; font-family:Noto Sans KR;"
	               design_text_shadow="0.5"
	               />

